  title: string;
  description?: string;
}

const { title, description = 'Proof-of-Verified-Carbon â€” transparent, verifiable carbon credit platform built on eStream' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/brand/synergy-carbon-icon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <title>{title} | SynergyCarbon</title>
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body>
    <nav class="nav">
      <a href="/" class="nav-brand">
        <img src="/brand/synergy-carbon-logo.svg" alt="" />
        SynergyCarbon
      </a>
      <ul class="nav-links">
        <li><a href="/how-it-works">How It Works</a></li>
        <li><a href="/technology">Technology</a></li>
        <li><a href="/marketplace">Marketplace</a></li>
        <li><a href="/for-developers">Developers</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="https://console.synergycarbon.io?demo=true" class="nav-cta">Try Demo</a></li>
      </ul>
    </nav>

    <slot />

    <footer class="footer">
      <div class="footer-inner">
        <div class="footer-brand">
          <a href="/" class="nav-brand" style="color: white;">
            <img src="/brand/synergy-carbon-logo.svg" alt="" style="height: 24px; filter: brightness(10);" />
            SynergyCarbon
          </a>
          <p>
            Transparent, verifiable carbon credits. Every tonne witnessed, verified,
            and traceable from source to retirement.
          </p>
        </div>
        <div class="footer-col">
          <h4>Platform</h4>
          <ul>
            <li><a href="/how-it-works">How It Works</a></li>
            <li><a href="/technology">Technology</a></li>
            <li><a href="/marketplace">Marketplace</a></li>
            <li><a href="https://console.synergycarbon.io?demo=true">Demo Console</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h4>Resources</h4>
          <ul>
            <li><a href="/for-developers">For Developers</a></li>
            <li><a href="/for-buyers">For Buyers</a></li>
            <li><a href="/api">API Reference</a></li>
            <li><a href="https://github.com/synergycarbon/povc-carbon">GitHub</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h4>Company</h4>
          <ul>
            <li><a href="/about">About</a></li>
            <li><a href="https://estream.dev">eStream Network</a></li>
            <li><a href="https://github.com/synergycarbon/povc-carbon/blob/main/docs/specs/governance/SPEC.md">Governance</a></li>
          </ul>
        </div>
      </div>
      <div class="footer-bottom">
        &copy; 2026 SynergyCarbon Inc. All rights reserved. Built on the eStream network.
      </div>
    </footer>

    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        },
        { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
      );

      document.querySelectorAll('.reveal, .reveal-left, .reveal-right, .reveal-scale').forEach((el) => {
        observer.observe(el);
      });

      const nav = document.querySelector('.nav');
      if (nav) {
        window.addEventListener('scroll', () => {
          nav.classList.toggle('scrolled', window.scrollY > 40);
        });
      }

      function animateCounter(el) {
        const target = parseInt(el.dataset.target, 10);
        if (isNaN(target)) return;
        const duration = 2000;
        const start = performance.now();
        const startVal = 0;

        function update(now) {
          const elapsed = now - start;
          const progress = Math.min(elapsed / duration, 1);
          const eased = 1 - Math.pow(1 - progress, 3);
          el.textContent = Math.round(startVal + (target - startVal) * eased).toLocaleString();
          if (progress < 1) requestAnimationFrame(update);
        }
        requestAnimationFrame(update);
      }

      const counterObserver = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              animateCounter(entry.target);
              counterObserver.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.5 }
      );

      document.querySelectorAll('.stat-value[data-target]').forEach((el) => {
        counterObserver.observe(el);
      });
    </script>
  </body>
</html>
